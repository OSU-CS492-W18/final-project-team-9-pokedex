<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tylerdj96.finalprojectpokedexteam9.FullPokedexEntryActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="left">

        <ImageView
            android:id="@+id/iv_entry_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="fitCenter"/>

        <TextView
            android:id="@+id/tv_entry_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:padding="16dp"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/tv_entry_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:padding="16dp"/>
    </LinearLayout>

    <!--<Menu xmlns:android="http://schemas.android.com/apk/res/android">
        <Item
            android:id="@+id/action_view_pokemon"
            android:icon="@drawable/ic_pokeball"
            android:title="@string/action_view_repo"
            android:showAsAction="ifRoom" />
    </Menu>-->

</android.support.constraint.ConstraintLayout>
